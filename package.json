{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "test": "jest --watch",
    "test:ci": "jest --coverage --verbose",
    "build": "ttsc --build",
    "build:watch": "ttsc --build --watch",
    "lint": "eslint ./packages/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-jest": "^22.6.4",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ttypescript": "^1.5.7",
    "typescript": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "packages/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "docs/**/*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
